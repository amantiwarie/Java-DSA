class Solution {
    static int getMaxLength(int arr[], int n)
    {
        int max = 0, count = 0;

        for(int i = 0; i < n; i++){
            if(arr[i] == 1){
                count++;
                max = Math.max(max, count);
            } else {
                count = 0;  // reset when 0 appears
            }
        }
        return max;
    }
}
