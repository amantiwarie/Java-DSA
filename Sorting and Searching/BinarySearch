class Solution {
    public int search(int[] arr, int tar) {
        int si =0;
        int ei =arr.length-1;
        while(si<=ei){
            int mid =si + (ei-si)/2;
            if(arr[mid]==tar) return mid;
            if(tar<arr[mid]){
                ei=mid-1;
            }
            else{
                si=mid+1;
            }
        }
        return -1;
    }
}
